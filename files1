#include<stdio.h>
#include<string.h> 
#include<stdlib.h>
int main()
{   
  FILE* fp;
  int i=0;
  char *s;
  char a[50];
  char c;
  printf("Enter the data for the file:\n");
  s= (char*)malloc(sizeof(char));
  gets(s);
  s = (char*)realloc(s,strlen(s)*sizeof(char));
  fp=fopen("test1.txt","w");
  fprintf(fp,"%s",s);
  fclose(fp);
  fp=fopen("gag.txt","r");
  c = getc(fp);
  while(c!= EOF) 
  { 	
    a[i]=c;
    i++;
    c=getc(fp);
  }
  a[i]='\0';
  strrev(a);
  printf("The data of the file in reverse is : %s",a);
  fclose(fp);
  fp=fopen("test2.txt","w");
  fprintf(fp,"%s",a);
  fclose(fp);
  fp=fopen("test3.txt","w");
  fprintf(fp,"%s",strrev(a));
  fclose(fp);
  return 0;
}
